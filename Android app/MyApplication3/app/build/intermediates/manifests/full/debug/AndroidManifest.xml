<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akkaratanapat.altear.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mchat"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.akkaratanapat.altear.myapplication.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akkaratanapat.altear.myapplication.FirstActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.akkaratanapat.altear.myapplication.PressInfo"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akkaratanapat.altear.myapplication.ChatActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akkaratanapat.altear.myapplication.HomeActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name="com.akkaratanapat.altear.myapplication.MarkedActivity"
            android:label=""
            android:screenOrientation="portrait" />
    </application>

</manifest>