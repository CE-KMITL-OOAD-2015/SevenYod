<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.akkaratanapat.altear.testregister.Permission">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptBtn"
        android:layout_marginLeft="0dp"
        android:textColor="#FFFFFF"
        android:background="#0088FF"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/permissionBtn"
        android:layout_alignStart="@+id/permissionBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Denied"
        android:id="@+id/deniedBtn"
        android:layout_marginRight="0dp"
        android:textColor="#FFFFFF"
        android:background="#FF9900"
        android:layout_alignTop="@+id/acceptBtn"
        android:layout_alignEnd="@+id/permissionBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permissionBtn"
        android:background="@drawable/mchat"
        android:text="\nPermission\n\n1.aaaaaaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
